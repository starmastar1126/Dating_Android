<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/parent"
        style="@style/MyRippleStyleLight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_size"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_default_photo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_overlay"
                android:padding="@dimen/spacing_middle">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fullname"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:shadowColor="@color/black"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:layout_marginRight="@dimen/spacing_small"
                            android:ellipsize="end" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/online_image"
                            android:layout_width="@dimen/square_item_icon_size"
                            android:layout_height="@dimen/square_item_icon_size"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_online"
                            app:civ_border="true"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp"
                            app:civ_shadow="false"
                            app:civ_shadow_radius="0" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/verified_image"
                            android:layout_width="@dimen/square_item_icon_size"
                            android:layout_height="@dimen/square_item_icon_size"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_verified"
                            app:civ_border="true"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp"
                            app:civ_shadow="false"
                            app:civ_shadow_radius="0" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/pro_image"
                            android:layout_width="@dimen/square_item_icon_size"
                            android:layout_height="@dimen/square_item_icon_size"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_pro_mode"
                            app:civ_border="true"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1dp"
                            app:civ_shadow="false"
                            app:civ_shadow_radius="0" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/gender_image"
                            android:layout_width="@dimen/square_item_icon_size"
                            android:layout_height="@dimen/square_item_icon_size"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="0dp"
                            app:tint="@color/colorPrimary"
                            app:civ_background_color="@color/white"
                            app:srcCompat="@drawable/ic_gender_secret"
                            app:civ_border="true"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="1dp"
                            app:civ_shadow="false"
                            app:civ_shadow_radius="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subtitle_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@android:color/white"
                            android:maxLines="1"
                            android:shadowColor="@color/black"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1"
                            android:layout_marginRight="@dimen/spacing_small" />

                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/progressBar" />
            </RelativeLayout>
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</RelativeLayout>
