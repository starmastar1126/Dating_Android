<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".AddPhotoFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_middle"
            android:textColor="@color/menu_fragment_icon_tint"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/msg_gallery_moderation_notice"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_bg" />

        <github.ankushsachdeva.emojicon.EmojiconEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/commentEdit"
            android:hint="@string/placeholder_photo"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:gravity="left|top"
            android:background="#00000000"
            android:maxLength="140"
            android:textSize="16dp"
            emojicon:emojiconSize="24dp"
            android:padding="7dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/gray_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/choicePostImg"
                android:src="@drawable/ic_action_camera"
                android:scaleType="centerCrop"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/emojiBtn"
                android:background="@drawable/ic_emoji"
                android:scaleType="centerCrop"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/privacyCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:checked="true"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:text="@string/label_photo_privacy" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>